  <body>
    <!-- @import "../header.html" -->
    <main>
      <div class="container">
        <div class="img"></div>
        <div class="info">
          <p class="title">About website creator:</p>
          <p><span class="colored">Name:</span> JavaCat</p>
          <p><span class="colored">IT-school:</span> AIT-TR.de</p>
          <p><span class="colored">Age:</span> 4 month</p>
          <p>
            <span class="colored">Religion:</span> Pastafarianism (Church of the
            Flying Spaghetti Monster)
          </p>
          <p><span class="colored">Stack:</span> Java, JS</p>
        </div>
      </div>
    </main>
  </body>
